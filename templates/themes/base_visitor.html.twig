<meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
<meta name="theme-color" content="#ffffff">


{# Bootsrap 5 #}
    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

{# JavaScript #}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
</head>
<body >
    
    {# Navbar #}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{path('visitor.welcome.index')}}">PMR</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{path('visitor.welcome.index')}}">accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Qui suis-je</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('visitor.blog.index')}}">Blog</a>
        </li>
        <li class="nav-item">
        <li class="nav-item">
          <a class="nav-link" href="{{path('visitor.contact.create')}}">Contact</a>
        </li>
       </ul>
         <ul class="navbar-nav ms-auto">
         {% if app.user %} 

         {% if is_granted('ROLE_ADMIN') %}
          <li class="nav-item ">
          <a class="nav-link" href="{{path('admin.home.index')}}">Espace Admin</a>
          </li>
          {% elseif is_granted('ROLE_USER') %}
          <li class="nav-item ">
          <a class="nav-link" href="">Espace privé</a>
          </li>
         {% endif %}
         
        
        <li class="nav-item">
          {# <a class="nav-link" href="{{path('visitor.authentication.logout')}}">Déconnexion</a> #}
        </li>
     
        {% else %} 
        <li class="nav-item ">
          <a class="nav-link" href="{{path('visitor.authentication.login')}}">Connexion</a><
        </li>
         <li class="nav-item">
          <a class="nav-link" href="{{path('visitor.registration.register')}}">Inscription</a>
        </li>
        {% endif %}
          
       
         </ul>
      
    </div>
  </div>
</nav>

{# Le contenue spécifique à chaques pages #}
{% block main %}{% endblock %}

{# Footer #}

<footer class="fixed-bottom text-center">
  
    <p>Copyright &copy; 2023</p>
  
</footer>

</body>

</html>